<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>
	<!-- navigation-rule for login.xhtml -->
	<navigation-rule>
		<from-view-id>/pages/unsecure/login.xhtml</from-view-id>
		<!-- navigation-case for method login() -->
		<navigation-case>
			<from-action>#{loginMgmtBean.login}</from-action>
			<from-outcome>correct</from-outcome>
			<to-view-id>/pages/secure/index.xhtml</to-view-id>
		</navigation-case>
		<!-- navigation-case for method login() -->
		<navigation-case>
			<from-action>#{loginMgmtBean.login}</from-action>
			<from-outcome>incorrect</from-outcome>
			<to-view-id>/pages/unsecure/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginMgmtBean.register}</from-action>
			<from-outcome>register</from-outcome>
			<to-view-id>/pages/unsecure/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/pages/secure/*</from-view-id>
		<navigation-case>
			<from-action>#{loginMgmtBean.logout}</from-action>
			<from-outcome>loggedout</from-outcome>
			<to-view-id>/pages/unsecure/login.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{loginMgmtBean.logout}</from-action>
			<from-outcome>loggedout</from-outcome>
			<to-view-id>/pages/unsecure/login.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>index</from-outcome>
			<to-view-id>/pages/secure/index.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>list</from-outcome>
			<to-view-id>/pages/secure/list.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>allCatAdopt</from-outcome>
			<to-view-id>/pages/secure/allCatAdopt.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>applicationList</from-outcome>
			<to-view-id>/pages/secure/applicationList.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>application</from-outcome>
			<to-view-id>/pages/secure/application.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>vetList</from-outcome>
			<to-view-id>/pages/secure/vetList.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>generateAnimalContract</from-outcome>
			<to-view-id>/pages/secure/generateAnimalContract.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		<navigation-case>
			<from-action>#{addAppMB.addApplication}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/pages/secure/applicationConf.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
				<navigation-case>
			<from-action>#{naviBean.navigate}</from-action>
			<from-outcome>contractList</from-outcome>
			<to-view-id>/pages/secure/contractList.xhtml</to-view-id>
			<redirect></redirect>
		</navigation-case>
		
		
	</navigation-rule>
</faces-config>